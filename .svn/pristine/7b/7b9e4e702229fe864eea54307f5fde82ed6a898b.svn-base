<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawableLeft="@drawable/ico_back_navbar_black"
            android:padding="@dimen/dp12"
            android:textColor="@color/j_666666"
            android:textSize="@dimen/sp12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/dp12"
            android:text="请输入支付密码"
            android:textColor="@color/accent"
            android:textSize="@dimen/sp15" />
    </RelativeLayout>

    <include layout="@layout/include_view_dp1" />

    <com.hmkj.taozhifu.view.PayPwdEditText
        android:id="@+id/tv_pay_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:layout_marginBottom="@dimen/dp40"
        android:layout_marginLeft="20dp"
        android:background="@null"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/dp29.5"
        android:gravity="center"
        android:textColor="@color/j_333333"
        android:textSize="@dimen/sp30" />
</LinearLayout>