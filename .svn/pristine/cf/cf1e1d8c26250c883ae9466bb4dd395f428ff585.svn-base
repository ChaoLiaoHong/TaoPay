<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <include layout="@layout/common_horizontal_line_taodian" />
    <!--输入验证码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp12"
        android:paddingRight="@dimen/dp12">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/new_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/view"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/white"
                android:drawablePadding="@dimen/dp17"
                android:hint="@string/input_new_pwd"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:textColor="@color/j_cccccc"
                android:textSize="@dimen/sp14" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/hide"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/dp5"
            android:src="@drawable/ico_conceal_password" />
    </LinearLayout>

    <include layout="@layout/common_horizontal_line_taodian" />

    <!--输入验证码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp12"
        android:paddingRight="@dimen/dp12">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/new_pwds"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/view"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/white"
                android:drawablePadding="@dimen/dp17"
                android:hint="@string/setting_pwds"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:textColor="@color/j_cccccc"
                android:textSize="@dimen/sp14" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/show"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/dp5"
            android:src="@drawable/ico_displayl_password" />
    </LinearLayout>

    <Button
        android:id="@+id/mSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp21.5"
        android:layout_marginRight="@dimen/dp21.5"
        android:layout_marginTop="@dimen/dp30"
        android:background="@drawable/btn_login_bg"
        android:text="@string/save"
        android:textColor="@color/white" />
</LinearLayout>
