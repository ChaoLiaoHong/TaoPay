<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <include layout="@layout/common_horizontal_line_taodian" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/versin_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp18"
                android:paddingRight="@dimen/dp18"
                android:text="@string/version_update" />

            <TextView
                android:id="@+id/versionCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/dp7.5"
                android:drawableRight="@drawable/ico_right"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp18" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:layout_marginLeft="@dimen/dp18"
            android:background="@color/e6e6e6" />

        <LinearLayout
            android:id="@+id/contact_our"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp18"
                android:text="@string/contact_our" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/dp7.5"
                android:drawableRight="@drawable/ico_right"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp18" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:layout_marginLeft="@dimen/dp18"
            android:background="@color/e6e6e6" />

        <LinearLayout
            android:id="@+id/clearCache_ly"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp18"
                android:text="@string/clear_cache" />

            <TextView
                android:id="@+id/cacheSize"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/dp7.5"
                android:drawableRight="@drawable/ico_right"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp18"
                android:text="0.0B" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:layout_marginLeft="@dimen/dp18"
            android:background="@color/e6e6e6" />

        <TextView
            android:id="@+id/about_our"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44.5"
            android:drawableRight="@drawable/ico_right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp18"
            android:paddingRight="@dimen/dp18"
            android:text="@string/about_me" />

    </LinearLayout>

    <Button
        android:id="@+id/mExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp21.5"
        android:layout_marginRight="@dimen/dp21.5"
        android:layout_marginTop="@dimen/dp30"
        android:background="@drawable/btn_login_bg"
        android:text="@string/exit_login"
        android:textColor="@color/white" />

</LinearLayout>
