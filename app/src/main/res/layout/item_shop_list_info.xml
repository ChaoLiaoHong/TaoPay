<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_commodity_pic"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp90"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_commodity_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/j_333333"
                android:textSize="@dimen/sp15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/rb"
                    style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:progressTint="@color/gold" />

                <TextView
                    android:id="@+id/tv_money_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:textColor="@color/j_666666"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingLeft="@dimen/dp5"
                    android:paddingRight="@dimen/dp5"
                    android:textColor="@color/j_666666"
                    android:textSize="@dimen/sp12" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/dp10"
                android:drawableLeft="@drawable/ico_address_shop"
                android:drawablePadding="@dimen/dp10"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="@color/j_666666"
                android:textSize="@dimen/sp12" />

            <include layout="@layout/include_view_da1_margin_left_dp10" />

            <TextView
                android:id="@+id/tv_present"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:drawableLeft="@drawable/ico_sale"
                android:drawablePadding="@dimen/dp10"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/j_666666"
                android:textSize="@dimen/sp12" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/include_view_da1_margin_left_dp10" />
</LinearLayout>