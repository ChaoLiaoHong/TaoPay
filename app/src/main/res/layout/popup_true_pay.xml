<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp12"
                android:text="取消"
                android:textColor="@color/j_666666"
                android:textSize="@dimen/sp12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/dp12"
                android:text="确认付款"
                android:textColor="@color/accent"
                android:textSize="@dimen/sp15" />
        </RelativeLayout>

        <include layout="@layout/include_view_dp1" />

        <TextView
            android:id="@+id/tv_pay_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp44.5"
            android:layout_marginTop="@dimen/dp29.5"
            android:gravity="center"
            android:textColor="@color/j_333333"
            android:textSize="@dimen/sp30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp15"
            android:paddingLeft="@dimen/dp12"
            android:paddingRight="@dimen/dp12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单信息"
                android:textColor="@color/j_666666"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_order_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp26"
                android:textColor="@color/j_333333"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:layout_marginLeft="@dimen/dp12"
            android:background="@color/e6e6e6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp15"
            android:paddingLeft="@dimen/dp12"
            android:paddingRight="@dimen/dp12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="付款方式"
                android:textColor="@color/j_666666"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_use_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp26"
                android:textColor="@color/j_333333"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:layout_marginLeft="@dimen/dp12"
            android:background="@color/e6e6e6" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_pay_onClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginRight="@dimen/dp12"
        android:background="@drawable/bg_textview_blue2"
        android:gravity="center"
        android:padding="@dimen/dp12"
        android:layout_marginTop="@dimen/dp20"
        android:text="立即付款"
        android:textColor="@color/white"
        android:textSize="@dimen/sp16" />
</LinearLayout>