<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/classify_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp10"
            android:textColor="@color/accent"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/tv_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp10"
            android:layout_alignBaseline="@+id/classify_name"
            android:text="@string/tv_all"
            android:textColor="@color/j_666666"
            android:textSize="@dimen/sp11" />

    </RelativeLayout>

    <include layout="@layout/include_view_da1_margin_left_dp10" />

    <com.hmkj.taozhifu.view.NoScrollGridView
        android:id="@+id/small_classify_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:horizontalSpacing="@dimen/dp10"
        android:numColumns="3"
        android:verticalSpacing="@dimen/dp10" />
</LinearLayout>